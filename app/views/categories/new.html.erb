<h2>Add Category</h2>

<%= form_for @category do |f| %>
<!-- <label>Name : </label> -->
<% if @category.errors.any? %>
  <h3>Errors : </h3>
  <ul>
  <% @category.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>
<%= f.label :name %>
<%= f.text_field :name %><br/>
<%= f.submit "Submit" %>
<% end %>

