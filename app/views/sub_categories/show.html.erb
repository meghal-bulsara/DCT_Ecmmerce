<h2>Show Page</h2>

<!-- Sub Category : <%= @sub_category.name %><br/>
Category : <%= @sub_category.category.name %><br/> -->

<% if user_signed_in? && current_user.is_admin %>
  <%= link_to "Edit", edit_sub_category_path(@sub_category.id) %><br/>
  <%= link_to "Destroy", sub_category_path(@sub_category.id), method: :delete, data: {confirm: "Are you sure?"} %><br/>
<% end %>
<%= link_to "Back", sub_categories_path %>
<ul>
<% @sub_category.products.each do |product| %>
  <li><%= link_to product.name, product_path(product.id) %></li>
<% end %>
</ul>